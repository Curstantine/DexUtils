{
	"name": "@dexutils/client",
	"version": "0.0.1",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "rimraf dist && pnpm run build:types && pnpm run build:esm",
		"build:esm": "esbuild src/index.ts --bundle --platform=node --target=es2021 --format=esm --outfile=dist/index.js",
		"build:types": "tsc --emitDeclarationOnly --outDir dist",
		"typecheck": "tsc",
		"lint": "eslint .",
		"lint:fix": "pnpm lint --fix",
		"test": "jest",
		"test:watch": "pnpm test -- --watch"
	},
	"dependencies": {
		"@dexutils/typings": "workspace:^",
		"form-data": "^4.0.0",
		"node-fetch": "^3.3.0"
	},
	"devDependencies": {
		"@types/node": "^18.11.9",
		"esbuild": "^0.15.15",
		"esbuild-runner": "^2.2.2",
		"rimraf": "^4.1.2",
		"typescript": "^4.9.3",
		"uvu": "^0.5.6"
	}
}
