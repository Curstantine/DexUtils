{
	"name": "@dexutils/typings",
	"version": "0.0.1",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"postinstall": "pnpm build",
		"build": "rimraf dist && pnpm run build:types && pnpm run build:esm",
		"build:esm": "esbuild src/index.ts --bundle --platform=node --target=es2021 --format=esm --outfile=dist/index.js",
		"build:types": "tsc --emitDeclarationOnly --outDir dist",
		"typecheck": "tsc",
		"lint": "eslint .",
		"lint:fix": "pnpm lint:fix",
		"test": "jest",
		"test:watch": "pnpm test -- --watch"
	},
	"devDependencies": {
		"@dexutils/eslint-config": "*",
		"@dexutils/jest-config": "*",
		"@types/jest": "^29.2.3",
		"@types/node": "^16.18.3",
		"esbuild": "^0.15.15",
		"eslint": "^8.28.0",
		"jest": "^29.3.1",
		"rimraf": "^4.1.2",
		"typescript": "^4.9.3"
	}
}
